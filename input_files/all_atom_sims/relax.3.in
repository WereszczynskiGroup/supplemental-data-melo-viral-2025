NPT heating with restraints
 &cntrl
  imin  = 0,    ntx = 5,      irest = 1,            !Don't do minimization, read coordinates and velocities from restarts file
  nstlim=25000, dt = 0.004,                         !run for 25000 steps, 4 fs timestep
  temp0 = 300,                                      !temperature
  ntpr = 1000,  ntwr = 2500,  ntwx = 2500,          !frequency for outputs of energy, restarts, and trajectory
  ntf = 2,	ntc = 2,                            !SHAKE
  cut = 10.0,                                       !cutoff
  ntb = 2, ntp = 1, tautp = 1.0, taup = 1.0,        !Constant pressure 
  barostat = 1,                                     !Berendsen barostat, may change to 2 for MC
  ntt = 3,      gamma_ln = 2,                       !Langevin dynamics 
  ntr = 1,                                          !restraints
  restraintmask = ':1-1092 & !@H=', restraint_wt = .3,!restraint mask and weight
  iwrap = 1,    ioutfm = 1,                         !wrap coordinates and output binary trajectory
/
