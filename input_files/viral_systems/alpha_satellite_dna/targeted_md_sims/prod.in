NPT heating with restraints
 &cntrl
  imin  = 0,    ntx = 5,      irest = 1,            !Don't do minimization, read coordinates and velocities from restarts file
  nstlim=1000, dt = 0.004,                       !run for 1000 steps, 4 fs timestep, 1ns
  temp0 = 300,                                      !temperature
  ntpr = 10,  ntwr = 25,  ntwx = 25,          !frequency for outputs of energy, restarts, and trajectory
  ntf = 2,	ntc = 2,                            !SHAKE
  cut = 10.0,                                       !cutoff
  ntb = 2, ntp = 1, tautp = 1.0, taup = 1.0,        !Constant pressure 
  barostat = 1,                                     !Berendsen barostat, may change to 2 for MC
  ntt = 3,      gamma_ln = 2,                       !Langevin dynamics 
  iwrap = 1,    ioutfm = 1,                         !wrap coordinates and output binary trajectory
  itgtmd = 1, 					    ! Targeted MD
  tgtrmsd = 0, 					    ! Value of target RMSD
  tgtfitmask = ':1-294 & !@H=', 			    ! Atoms used for rms superposition calculation between structure and reference structure  
  tgtrmsmask = ':1-294 & !@H=',			    ! Atoms used for rms diff calculation
  tgtmdfrc = 1.0, 				    ! Force constant	
/
